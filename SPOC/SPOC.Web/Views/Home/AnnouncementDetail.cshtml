@model SPOC.Core.Dto.AnnouncementFrontViewDto
@{
    ViewBag.Title = "AnnouncementDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles
{
    <style type="text/css">
        .announcement-detail-page {
            padding-top: 30px;
        }

        .detail-title {
            font-size: 30px;
            margin-bottom: 10px;
        }

        .detail-info,
        .detail-info span {
            color: #979faf;
        }

        .detail-content {
            padding: 30px 20px;
        }
    </style>
}
<!-- 公告详情-S -->
<div class="announcement-detail-page container-box center">
    <div class="detail-header text-center">
        <h1 class="detail-title">@Model.title</h1>
        <div class="detail-info">
            发布时间：<span>@Model.updateTime</span>
            发布者：<span>@Model.userName</span>
        </div>
    </div>
    <div class="detail-content">
        @Html.Raw(Model.content)
    </div>
    @if (Model.fileId != Guid.Empty)
    {
        <p>附件：</p>
        <a href="/Core/File/Download/@Model.fileId">
            <span class="glyphicon glyphicon-file"></span>
            @Model.fileName
        </a>
    }
</div>
